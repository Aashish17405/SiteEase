{
    "manifest_version": 3,
    "name": "Text Style Toggle",
    "version": "1.0",
    "description": "Toggle text style on the webpage.",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icon-16x16.png",
        "48": "icon-48x48.png",
        "128": "icon-128x128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
