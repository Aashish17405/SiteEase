{
    "manifest_version": 3,
    "name": "Site Ease",
    "version": "1.0",
    "description": "Toggle text style on the webpage.",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon-32x32.png",
        "48": "icons/icon-48x48.png",
        "128": "icons/icon-128x128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon-32x32.png",
            "48": "icons/icon-48x48.png",
            "128": "icons/icon-128x128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
